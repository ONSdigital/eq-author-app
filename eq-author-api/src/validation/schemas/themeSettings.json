{
  "$id": "http://example.com/schemas/themeSettings.json",
  "type": "object",
  "properties": {
    "themes": {
      "$ref": "#/definitions/themes"
    }
  },
  "definitions": {
    "themes": {
      "type": "array",
      "contains": {
        "type": "object",
        "properties": {
          "enabled": {
            "const": true
          }
        }
      },
      "items": {
        "type": "object",
        "if": {
          "properties": {
            "enabled": {
              "const": true
            }
          }
        },
        "then": {
          "properties": {
            "formType": {
              "type": "string",
              "pattern": "^(\\d{4})?$",
              "errorMessage": "ERR_FORM_TYPE_FORMAT"
            }
          }
        }
      },
      "errorMessage": { "contains": "ERR_NO_THEME_ENABLED" }
    }
  }
}
