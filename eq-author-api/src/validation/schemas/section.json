{
    "$id": "http://example.com/schemas/section.json",
    "type": "object",
    "additionalProperties": true,
    "properties": {
        "id": {
            "type": "string"
        },
        "title": {
            "allOf": [
                {
                    "type": "string",
                    "requiredWhenQuestionnaireSetting": "navigation"
                },
                {
                    "type": "string",
                    "requiredWhenQuestionnaireSetting": "hub"
                }
            ]
        },
        "introductionTitle": {
            "type": "string",
            "requiredWhenOtherFieldsPopulated": [
                "introductionContent"
            ]
        },
        "introductionContent": {
            "type": "string",
            "requiredWhenOtherFieldsPopulated": [
                "introductionTitle"
            ]
        },
        "folders": {
            "type": "array",
            "items": {
                "$ref": "folder.json"
            }
        }
    },
    "required": [
        "id"
    ]
}