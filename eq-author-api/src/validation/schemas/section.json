{
  "$id": "http://example.com/schemas/section.json",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "id": {
      "type": "string"
    },
    "title": {
      "type": "string",
      "allOf": [
        {
          "requiredWhenQuestionnaireSetting": "navigation"
        },
        {
          "requiredWhenQuestionnaireSetting": "hub"
        },
        {
          "requiredWhenQuestionnaireSetting": "collapsibleSummary"
        },
        {
          "requiredWhenSectionSetting": "sectionSummary"
        }
      ],
      "errorMessage": "ERR_REQUIRED_WHEN_SETTING"
    },
    "folders": {
      "type": "array",
      "items": {
        "$ref": "folder.json"
      }
    },
    "displayConditions": {
      "type": "array",
      "items": {
        "$ref": "logic.json#/definitions/expressionGroup"
      }
    },
    "pageDescription": {
      "type": "string",
      "pattern": "\\w+",
      "errorMessage": "PAGE_DESCRIPTION_MISSING"
    }
  },
  "if": {
    "properties": {
      "repeatingSection": {
        "const": true
      }
    }
  },
  "then": {
    "properties": {
        "repeatingSectionListId": {
          "$ref": "definitions.json#/definitions/populatedString"
      }
    }
   },
  "anyOf": [
    {
      "properties": {
        "introductionTitle": {
          "type": ["string", "null"],
          "maxLength": 0
        },
        "introductionContent": {
          "type": ["string", "null"],
          "maxLength": 0
        }
      }
    },
    {
      "properties": {
        "introductionTitle": {
          "$ref": "definitions.json#/definitions/populatedString"
        },
        "introductionContent": {
          "$ref": "definitions.json#/definitions/populatedString"
        }
      }
    }
  ]
}
