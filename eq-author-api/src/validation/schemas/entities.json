{
  "$id": "http://example.com/schemas/entities.json",
  "definitions": {
    "section": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "id": {
          "type": "string"
        },
        "title": {
          "type": "string",
          "requiredWhenQuestionnaireSetting": "navigation"
        },
        "introductionTitle": {
          "type": "string",
          "requiredWhenOtherFieldsPopulated": ["introductionContent"]
        },
        "introductionContent": {
          "type": "string",
          "requiredWhenOtherFieldsPopulated": ["introductionTitle"]
        },
        "pages": {
          "type": "array",
          "items": {
            "$ref": "entities.json#/definitions/page"
          }
        }
      },
      "required": ["id", "pages"]
    },
    "page": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "title": {
          "allOf": [
            {
              "$ref": "definitions.json#/definitions/populatedString"
            },
            {
              "validatePipingInTitle": "page"
            }
          ]
        },
        "confirmation": {
          "$ref": "entities.json#/definitions/confirmationPage"
        },
        "routing": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string"
            },
            "rules": {
              "type": "array",
              "items": {
                "$ref": "entities.json#/definitions/routingRule"
              }
            }
          }
        },
        "skipConditions": {
          "type": "array",
          "items": {
            "properties": {
              "id": {
                "type": "string"
              },
              "expressions": {
                "type": "array",
                "items": {
                  "anyOf": [
                    {
                      "$ref": "entities.json#/definitions/expression"
                    },
                    {
                      "$ref": "entities.json#/definitions/expression-unanswered"
                    }
                  ]
                }
              }
            }
          }
        },
        "totalValidation": {
          "$ref": "entities.json#/definitions/totalValidation"
        }
      },
      "if": {
        "properties": {
          "pageType": {
            "enum": ["QuestionPage"]
          }
        }
      },
      "then": {
        "properties": {
          "answers": {
            "type": "array",
            "items": {
              "$ref": "entities.json#/definitions/answer"
            },
            "minItems": 1,
            "errorMessage": {
              "minItems": "ERR_NO_ANSWERS"
            }
          }
        }
      },
      "else": {
        "if": {
          "properties": {
            "pageType": {
              "enum": ["CalculatedSummaryPage"]
            }
          }
        },
        "then": {
          "properties": {
            "summaryAnswers": {
              "type": "array",
              "items": {
                "allOf": [
                  {
                    "$ref": "entities.json#/definitions/answer"
                  }
                ]
              },
              "calculatedSummaryUnitConsistency": {
                "$data": "/sections"
              },
              "minItems": 1,
              "errorMessage": {
                "minItems": "ERR_NO_ANSWERS"
              }
            }
          },
          "required": ["summaryAnswers"]
        }
      },
      "required": ["id", "title"]
    },
    "totalValidation": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "object",
          "properties": {
            "enabled": {
              "const": false
            }
          }
        },
        {
          "type": "object",
          "properties": {
            "enabled": {
              "const": true
            },
            "entityType": {
              "const": "Custom"
            },
            "custom": {
              "not": { "type": "null" }
            }
          }
        },
        {
          "type": "object",
          "properties": {
            "enabled": {
              "const": true
            },
            "entityType": {
              "const": "PreviousAnswer"
            },
            "previousAnswer": {
              "not": { "type": "null" }
            }
          }
        }
      ],
      "errorMessage": "ERR_TOTAL_NO_VALUE"
    },
    "confirmationPage": {
      "properties": {
        "id": {
          "type": "string"
        },
        "title": {
          "$ref": "definitions.json#/definitions/populatedString"
        },
        "positive": {
          "type": "object",
          "properties": {
            "label": {
              "allOf": [
                {
                  "$ref": "definitions.json#/definitions/populatedString"
                },
                {
                  "not": {
                    "const": {
                      "$data": "2/negative/label"
                    }
                  },
                  "errorMessage": "ERR_UNIQUE_REQUIRED"
                }
              ]
            }
          },
          "required": ["label"]
        },
        "negative": {
          "type": "object",
          "properties": {
            "label": {
              "allOf": [
                {
                  "$ref": "definitions.json#/definitions/populatedString"
                },
                {
                  "not": {
                    "const": {
                      "$data": "2/positive/label"
                    }
                  },
                  "errorMessage": "ERR_UNIQUE_REQUIRED"
                }
              ]
            }
          },
          "required": ["label"]
        }
      },
      "required": ["id", "title", "positive"]
    },

    "answer": {
      "allOf": [
        {
          "$ref": "entities.json#/definitions/basicAnswer"
        },
        {
          "$ref": "entities.json#/definitions/multipleChoiceAnswer"
        },
        {
          "$ref": "entities.json#/definitions/numericAnswer"
        },
        {
          "$ref": "entities.json#/definitions/dateAnswer"
        },
        {
          "$ref": "entities.json#/definitions/dateRangeAnswer"
        }
      ]
    },
    "basicAnswer": {
      "type": "object",
      "if": {
        "properties": {
          "type": {
            "not": {
              "enum": ["Checkbox", "Radio"]
            }
          }
        }
      },
      "then": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "label": {
            "$ref": "definitions.json#/definitions/populatedString"
          },
          "properties": {
            "$ref": "entities.json#/definitions/properties"
          }
        },
        "required": ["id", "label"]
      }
    },
    "numericAnswer": {
      "if": {
        "properties": {
          "type": {
            "enum": ["Number", "Percentage", "Currency", "Unit"]
          }
        }
      },
      "then": {
        "type": "object",
        "properties": {
          "validation": {
            "if": {
              "allOf": [
                {
                  "properties": {
                    "minValue": {
                      "properties": {
                        "enabled": {
                          "const": true
                        },
                        "previousAnswer": {
                          "const": null
                        }
                      }
                    }
                  }
                },
                {
                  "properties": {
                    "maxValue": {
                      "properties": {
                        "enabled": {
                          "const": true
                        },
                        "previousAnswer": {
                          "const": null
                        }
                      }
                    }
                  }
                }
              ]
            },
            "then": {
              "properties": {
                "minValue": {
                  "type": "object",
                  "properties": {
                    "custom": {
                      "maximum": {
                        "$data": "2/maxValue/custom"
                      },
                      "errorMessage": "ERR_MIN_LARGER_THAN_MAX"
                    }
                  }
                },
                "maxValue": {
                  "type": "object",
                  "properties": {
                    "custom": {}
                  }
                }
              }
            }
          },
          "properties": {
            "$ref": "entities.json#/definitions/properties"
          }
        }
      },
      "else": false
    },
    "multipleChoiceAnswer": {
      "if": {
        "properties": {
          "type": {
            "enum": ["Checkbox", "Radio"]
          }
        }
      },
      "then": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "options": {
            "type": "array",
            "items": {
              "allOf": [
                {
                  "$ref": "entities.json#/definitions/option"
                },
                {
                  "uniquePropertyValueInArrayOfObjects": "label"
                }
              ]
            }
          },
          "mutuallyExclusiveOption": {
            "$ref": "entities.json#/definitions/option"
          }
        },
        "required": ["id", "options"]
      },
      "else": false
    },
    "dateAnswer": {
      "if": {
        "properties": {
          "type": {
            "enum": ["Date"]
          }
        }
      },
      "then": {
        "type": "object",
        "properties": {
          "validation": {
            "if": {
              "allOf": [
                {
                  "properties": {
                    "earliestDate": {
                      "properties": {
                        "enabled": { "const": true },
                        "entityType": { "enum": ["Custom", "Metadata"] }
                      }
                    }
                  }
                },
                {
                  "properties": {
                    "latestDate": {
                      "properties": {
                        "enabled": { "const": true },
                        "entityType": { "enum": ["Custom", "Metadata"] }
                      }
                    }
                  }
                }
              ]
            },
            "then": {
              "properties": {
                "earliestDate": {
                  "type": "object",
                  "properties": {
                    "custom": {
                      "validateLatestAfterEarliest": {
                        "$data": "2/latestDate"
                      }
                    }
                  }
                }
              }
            }
          },
          "properties": {
            "$ref": "entities.json#/definitions/properties"
          }
        }
      }
    },
    "dateRangeAnswer": {
      "if": {
        "properties": {
          "type": {
            "enum": ["DateRange"]
          }
        }
      },
      "then": {
        "type": "object",
        "properties": {
          "validation": {
            "allOf": [
              {
                "if": {
                  "allOf": [
                    {
                      "properties": {
                        "minDuration": {
                          "properties": {
                            "enabled": {
                              "const": true
                            }
                          }
                        }
                      }
                    },
                    {
                      "properties": {
                        "maxDuration": {
                          "properties": {
                            "enabled": {
                              "const": true
                            }
                          }
                        }
                      }
                    }
                  ]
                },
                "then": {
                  "properties": {
                    "minDuration": {
                      "type": "object",
                      "properties": {
                        "duration": {
                          "validateDuration": {
                            "$data": "2/maxDuration"
                          }
                        }
                      }
                    },
                    "maxDuration": {
                      "type": "object",
                      "properties": {
                        "duration": {}
                      }
                    }
                  }
                }
              },
              {
                "if": {
                  "allOf": [
                    {
                      "properties": {
                        "earliestDate": {
                          "properties": {
                            "enabled": {
                              "const": true
                            }
                          }
                        }
                      }
                    },
                    {
                      "properties": {
                        "latestDate": {
                          "properties": {
                            "enabled": {
                              "const": true
                            }
                          }
                        }
                      }
                    }
                  ]
                },
                "then": {
                  "properties": {
                    "earliestDate": {
                      "type": "object",
                      "properties": {
                        "custom": {
                          "validateLatestAfterEarliest": {
                            "$data": "2/latestDate"
                          }
                        }
                      }
                    }
                  }
                }
              }
            ]
          },
          "properties": {
            "$ref": "entities.json#/definitions/properties"
          }
        }
      }
    },
    "properties": {
      "type": "object",
      "properties": {
        "decimals": {
          "linkedDecimalValidation": {
            "$data": "/sections"
          }
        },
        "maxLength": {
          "type": "string",
          "textLengthInRange": "maxLength"
        }
      }
    },
    "option": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "label": {
          "$ref": "definitions.json#/definitions/populatedString"
        },
        "additionalAnswer": {
          "$ref": "entities.json#/definitions/basicAnswer"
        }
      },
      "required": ["id", "label"]
    },
    "routingRule": {
      "properties": {
        "id": {
          "type": "string"
        },
        "destination": {},
        "expressionGroup": {
          "properties": {
            "id": { "type": "string" },
            "operator": { "enum": ["And", "Or"] },
            "expressions": {
              "type": "array",
              "items": {
                "anyOf": [
                  {
                    "$ref": "entities.json#/definitions/expression"
                  },
                  {
                    "$ref": "entities.json#/definitions/expression-unanswered"
                  }
                ]
              }
            }
          }
        }
      },
      "validateRoutingRule": {
        "$data": "/sections"
      }
    },
    "expression": {
      "properties": {
        "id": { "type": "string" },
        "condition": {
          "type": "string"
        },
        "left": {
          "type": "object",
          "anyOf": [
            {
              "type": "object",
              "properties": {
                "answerId": {
                  "type": "string",
                  "pattern": "\\w+"
                }
              },
              "required": ["answerId"]
            }
          ],
          "errorMessage": "ERR_ANSWER_NOT_SELECTED",
          "validateLeftHandSide": "left"
        },
        "right": {
          "type": "object",
          "properties": {
            "type": { "enum": ["Custom", "SelectedOptions"] },
            "optionIds": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "string"
              }
            },
            "customValue": {
              "type": "object",
              "properties": {
                "number": {
                  "not": { "type": "null" }
                }
              }
            }
          },
          "required": ["type"],
          "errorMessage": "ERR_RIGHTSIDE_NO_VALUE",
          "validateExclusiveCheckbox": "right"
        }
      }
    },
    "expression-unanswered": {
      "properties": {
        "id": { "type": "string" },
        "condition": { "enum": ["Unanswered"] },
        "left": {
          "type": "object",
          "anyOf": [
            {
              "type": "object",
              "properties": {
                "answerId": {
                  "type": "string",
                  "pattern": "\\w+"
                }
              },
              "required": ["answerId"]
            }
          ],
          "errorMessage": "ERR_ANSWER_NOT_SELECTED"
        }
      }
    }
  }
}
