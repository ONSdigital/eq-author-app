{
  "$id": "http://example.com/schemas/entities.json",
  "definitions": {
    "section": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "id": { "type": "string" },
        "title": {
          "type": "string",
          "requiredWhenQuestionnaireSetting": "navigation"
        },
        "introductionTitle": {
          "type": "string",
          "requiredWhenOtherFieldsPopulated": ["introductionContent"]
        },
        "introductionContent": {
          "type": "string",
          "requiredWhenOtherFieldsPopulated": ["introductionTitle"]
        },
        "pages": {
          "type": "array",
          "items": {
            "$ref": "entities.json#/definitions/page"
          }
        }
      },
      "required": ["id", "pages"]
    },
    "page": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "title": {
          "$ref": "definitions.json#/definitions/populatedString"
        },
        "confirmation": {
          "$ref": "entities.json#/definitions/confirmationPage"
        }
      },
      "if": {
        "properties": {
          "pageType": {
            "enum": ["QuestionPage"]
          }
        }
      },
      "then": {
        "properties": {
          "answers": {
            "type": "array",
            "items": {
              "$ref": "entities.json#/definitions/answer"
            },
            "minItems": 1,
            "errorMessage": {
              "minItems": "ERR_NO_ANSWERS"
            }
          }
        }
      },
      "else": {
        "if": {
          "properties": {
            "pageType": {
              "enum": ["CalculatedSummaryPage"]
            }
          }
        },
        "then": {
          "properties": {
            "summaryAnswers": {
              "type": "array",
              "items": {
                "$ref": "entities.json#/definitions/answer"
              },
              "minItems": 1,
              "errorMessage": {
                "minItems": "ERR_NO_ANSWERS"
              }
            }
          },
          "required": ["summaryAnswers"]
        }
      },
      "required": ["id", "title"]
    },
    "confirmationPage": {
      "properties": {
        "id": { "type": "string" },
        "title": {
          "$ref": "definitions.json#/definitions/populatedString"
        },
        "positive": {
          "type": "object",
          "properties": {
            "label": {
              "allOf": [
                {
                  "$ref": "definitions.json#/definitions/populatedString"
                },
                {
                  "not": { "const": { "$data": "2/negative/label" } },
                  "errorMessage": "ERR_UNIQUE_REQUIRED"
                }
              ]
            }
          },
          "required": ["label"]
        },
        "negative": {
          "type": "object",
          "properties": {
            "label": {
              "allOf": [
                {
                  "$ref": "definitions.json#/definitions/populatedString"
                },
                {
                  "not": { "const": { "$data": "2/positive/label" } },
                  "errorMessage": "ERR_UNIQUE_REQUIRED"
                }
              ]
            }
          },
          "required": ["label"]
        }
      },
      "required": ["id", "title", "positive"]
    },
    "answer": {
      "oneOf": [
        {
          "$ref": "entities.json#/definitions/basicAnswer"
        },
        {
          "$ref": "entities.json#/definitions/multipleChoiceAnswer"
        }
      ]
    },
    "basicAnswer": {
      "if": {
        "properties": {
          "type": {
            "enum": [
              "TextField",
              "TextArea",
              "Number",
              "Percentage",
              "Currency",
              "Unit"
            ]
          }
        }
      },
      "then": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "label": {
            "$ref": "definitions.json#/definitions/populatedString"
          }
        },
        "required": ["id", "label"]
      },
      "else": false
    },
    "multipleChoiceAnswer": {
      "if": {
        "properties": {
          "type": {
            "enum": ["Checkbox", "Radio"]
          }
        }
      },
      "then": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "options": {
            "type": "array",
            "items": {
              "allOf": [
                {
                  "$ref": "entities.json#/definitions/option"
                },
                {
                  "uniquePropertyValueInArrayOfObjects": "label"
                }
              ]
            }
          },
          "mutuallyExclusiveOption": {
            "$ref": "entities.json#/definitions/option"
          }
        },
        "required": ["id", "options"]
      },
      "else": false
    },
    "option": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "label": {
          "$ref": "definitions.json#/definitions/populatedString"
        },
        "additionalAnswer": {
          "$ref": "entities.json#/definitions/basicAnswer"
        }
      },
      "required": ["id", "label"]
    }
  }
}
