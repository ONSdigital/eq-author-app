{
  "$id": "http://example.com/schemas/answer.json",
  "type": "object",
  "allOf": [
    {
      "if": {
        "properties": {
          "type": {
            "not": {
              "enum": ["Checkbox", "Radio", "MutuallyExclusive", "Select"]
            }
          }
        }
      },
      "then": {
        "$ref": "#/definitions/basicAnswer"
      }
    },
    {
      "if": {
        "properties": {
          "type": {
            "enum": ["Number", "Percentage", "Currency", "Unit"]
          }
        }
      },
      "then": {
        "$ref": "#/definitions/numericAnswer"
      }
    },
    {
      "if": {
        "properties": {
          "type": {
            "const": "Checkbox"
          }
        }
      },
      "then": {
        "$ref": "#/definitions/checkboxAnswer"
      }
    },
    {
      "if": {
        "properties": {
          "type": {
            "const": "Radio"
          }
        }
      },
      "then": {
        "$ref": "#/definitions/radioAnswer"
      }
    },
    {
      "if": {
        "properties": {
          "type": {
            "const": "Select"
          }
        }
      },
      "then": {
        "$ref": "#/definitions/selectAnswer"
      }
    },
    {
      "if": {
        "properties": {
          "type": {
            "const": "MutuallyExclusive"
          }
        }
      },
      "then": {
        "$ref": "#/definitions/mutuallyExclusiveAnswer"
      }
    },
    {
      "if": {
        "properties": {
          "type": {
            "const": "Date"
          }
        }
      },
      "then": {
        "$ref": "#/definitions/dateAnswer"
      }
    },
    {
      "if": {
        "properties": {
          "type": {
            "const": "DateRange"
          }
        }
      },
      "then": {
        "$ref": "#/definitions/dateRangeAnswer"
      }
    }
  ],
  "definitions": {
    "basicAnswer": {
      "type": "object",
      "properties": {
        "label": {
          "$ref": "definitions.json#/definitions/populatedString"
        },
        "properties": {
          "$ref": "#/definitions/properties"
        }
      },
      "required": ["label"],
      "errorMessage": { "required": { "label": "ERR_VALID_REQUIRED" } }
    },
    "numericAnswer": {
      "if": {
        "type": "object",
        "properties": {
          "advancedProperties": {
            "const": true
          }
        }
      },
      "then": {
        "type": "object",
        "properties": {
          "validation": {
            "$ref": "validation.json#/definitions/numericValidations"
          }
        }
      }
    },
    "options": {
      "type": "array",
      "items": {
        "type": "object",
        "allOf": [
          {
            "$ref": "option.json"
          },
          {
            "uniquePropertyValueInArrayOfObjects": "label"
          }
        ]
      }
    },
    "checkboxAnswer": {
      "type": "object",
      "properties": {
        "options": {
          "$ref": "#/definitions/options"
        },
        "mutuallyExclusiveOption": {
          "$ref": "option.json"
        }
      },
      "required": ["options"]
    },
    "radioAnswer": {
      "type": "object",
      "properties": {
        "options": {
          "$ref": "#/definitions/options"
        },
        "mutuallyExclusiveOption": {
          "$ref": "option.json"
        }
      },
      "required": ["options"]
    },
    "selectAnswer": {
      "type": "object",
      "properties": {
        "label": {
          "$ref": "definitions.json#/definitions/populatedString"
        },
        "options": {
          "$ref": "#/definitions/options"
        },
        "mutuallyExclusiveOption": {
          "$ref": "option.json"
        }
      },
      "required": ["options"]
    },
    "mutuallyExclusiveAnswer": {
      "type": "object",
      "properties": {
        "options": {
          "$ref": "#/definitions/options"
        }
      },
      "required": ["options"]
    },
    "dateAnswer": {
      "if": {
        "type": "object",
        "properties": {
          "advancedProperties": {
            "const": true
          }
        }
      },
      "then": {
        "type": "object",
        "properties": {
          "validation": {
            "$ref": "validation.json#/definitions/dateValidations"
          }
        }
      }
    },
    "dateRangeAnswer": {
      "allOf": [
        {
          "type": "object",
          "properties": {
            "secondaryLabel": {
              "$ref": "definitions.json#/definitions/populatedString"
            }
          },
          "if": {
            "type": "object",
            "properties": {
              "advancedProperties": {
                "const": true
              }
            }
          },
          "then": {
            "type": "object",
            "properties": {
              "validation": {
                "$ref": "validation.json#/definitions/dateRangeValidations"
              },
              "properties": {
                "type": "object",
                "properties": {
                  "fallback": {
                    "$ref": "#/definitions/fallback"
                  }
                }
              }
            }
          }
        }
      ]
    },
    "properties": {
      "type": "object",
      "properties": {
        "maxLength": {
          "type": "number",
          "minimum": 10,
          "maximum": 2000,
          "errorMessage": {
            "minimum": "ERR_MAX_LENGTH_TOO_SMALL",
            "maximum": "ERR_MAX_LENGTH_TOO_LARGE"
          }
        },
        "unit": {
          "$ref": "definitions.json#/definitions/populatedString"
        }
      }
    },
    "fallback": {
      "if": {
        "type": "object",
        "properties": {
          "enabled": { "const": true }
        }
      },
      "then": {
        "allOf": [
          {
            "type": "object",
            "required": ["start"],
            "errorMessage": "ERR_VALID_REQUIRED_START"
          },
          {
            "type": "object",
            "required": ["end"],
            "errorMessage": "ERR_VALID_REQUIRED_END"
          }
        ]
      }
    }
  }
}
