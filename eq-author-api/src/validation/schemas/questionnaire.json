{
  "$id": "http://example.com/schemas/questionnaire.json",
  "type": "object",
  "properties": {
    "sections": {
      "type": "array",
      "items": {
        "$ref": "section.json"
      }
    },
    "themeSettings": {
      "$ref": "themeSettings.json"
    }
  },
  "anyOf": [
    {
      "properties": {
        "type": {
          "const": "Social"
        }
      }
    },
    {
      "properties": {
        "type": {
          "const": "Business"
        },
        "surveyId": {
          "if": {
            "type": "string",
            "minLength": 1
          },
          "then": {
            "type": "string",
            "pattern": "^\\d{3}$",
            "errorMessage": "ERR_INVALID"
          },
          "else": {
            "$ref": "definitions.json#/definitions/populatedString"
          }
        }
      }
    }
  ]
}
