{
  "$id": "http://example.com/schemas/questionnaire.json",
  "type": "object",
  "properties": {
    "sections": {
      "type": "array",
      "items": {
        "$ref": "section.json"
      }
    },
    "introduction": {
      "$ref": "introduction.json"
    },
    "collectionLists": {
      "type": "object",
      "properties": {
        "lists": {
          "type": "array",
          "items": {
            "$ref": "list.json"
          }
        }
      }
    },
    "submission": {
      "$ref": "submission.json"
    },
    "surveyId": {
      "allOf": [
        {
          "if": {
            "type": "string",
            "minLength": 1
          },
          "then": {
            "type": "string",
            "pattern": "^\\d{3}$",
            "errorMessage": "ERR_INVALID"
          },
          "else": {
            "$ref": "definitions.json#/definitions/populatedString"
          }
        },
        {
          "validateSurveyId": true
        }
      ]
    },
    "formType": {
      "if": {
        "type": "string",
        "minLength": 1
      },
      "then": {
        "type": "string",
        "pattern": "^\\d{4}$",
        "errorMessage": "ERR_INVALID"
      },
      "else": {
        "$ref": "definitions.json#/definitions/populatedString"
      }
    },
    "eqId": {
      "$ref": "definitions.json#/definitions/populatedString"
    }
  }
}
