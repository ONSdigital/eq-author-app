{
  "$id": "http://example.com/schemas/page.json",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "title": {
      "allOf": [
        {
          "$ref": "definitions.json#/definitions/populatedString"
        },
        {
          "validatePipingAnswerInTitle": true
        },
        {
          "validatePipingVariableInTitle": true
        },
        {
          "validatePipingMetadataInTitle": true
        }
      ]
    },
    "description": {
      "allOf": [
        {
          "validatePipingAnswerInTitle": true
        },
        {
          "validatePipingMetadataInTitle": true
        }
      ]
    },
    "pageDescription": {
      "type": "string",
      "pattern": "\\w+",
      "errorMessage": "PAGE_DESCRIPTION_MISSING",
      "allOf": [
        {
          "validatePageDescription": true
        }
      ]
    },
    "confirmation": {
      "$ref": "confirmationPage.json"
    },
    "routing": {
      "type": ["object", "null"],
      "properties": {
        "id": {
          "type": "string"
        },
        "else": {
          "$ref": "logic.json#/definitions/destination"
        },
        "rules": {
          "type": "array",
          "items": {
            "$ref": "logic.json#/definitions/routingRule"
          }
        }
      }
    },
    "skipConditions": {
      "type": "array",
      "items": {
        "$ref": "logic.json#/definitions/expressionGroup"
      }
    },
    "totalValidation": {
      "type": ["null", "object"],
      "if": {
        "type": "object"
      },
      "then": {
        "$ref": "validation.json#/definitions/validationEntry"
      }
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "definitionEnabled": {
            "const": true
          }
        }
      },
      "then": {
        "properties": {
          "definitionLabel": {
            "allOf": [
              {
                "not": {
                  "type": "null"
                },
                "errorMessage": "ERR_VALID_REQUIRED"
              },
              {
                "$ref": "definitions.json#/definitions/populatedString"
              }
            ]
          },
          "definitionContent": {
            "allOf": [
              {
                "not": {
                  "type": "null"
                },
                "errorMessage": "ERR_VALID_REQUIRED"
              },
              {
                "$ref": "definitions.json#/definitions/populatedString"
              }
            ]
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "additionalInfoEnabled": {
            "const": true
          }
        }
      },
      "then": {
        "properties": {
          "additionalInfoLabel": {
            "$ref": "definitions.json#/definitions/populatedString"
          },
          "additionalInfoContent": {
            "$ref": "definitions.json#/definitions/populatedString"
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "guidanceEnabled": {
            "const": true
          }
        }
      },
      "then": {
        "properties": {
          "guidance": {
            "$ref": "definitions.json#/definitions/populatedString"
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "descriptionEnabled": {
            "const": true
          }
        }
      },
      "then": {
        "properties": {
          "description": {
            "$ref": "definitions.json#/definitions/populatedString"
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "pageType": {
            "enum": ["QuestionPage"]
          }
        }
      },
      "then": {
        "properties": {
          "answers": {
            "type": "array",
            "items": {
              "$ref": "answer.json"
            },
            "minItems": 1,
            "errorMessage": {
              "minItems": "ERR_NO_ANSWERS"
            }
          }
        }
      },
      "else": {
        "if": {
          "properties": {
            "pageType": {
              "enum": ["CalculatedSummaryPage"]
            }
          }
        },
        "then": {
          "allOf": [
            {
              "properties": {
                "summaryAnswers": {
                  "type": "array",
                  "items": {
                    "$ref": "answer.json"
                  },
                  "calculatedSummaryUnitConsistency": {
                    "$data": "/sections"
                  },
                  "calculatedSummaryPosition": {
                    "$data": "/sections"
                  },
                  "minItems": 2,
                  "errorMessage": {
                    "minItems": "ERR_NO_ANSWERS"
                  }
                },
                "totalTitle": {
                  "type": "string",
                  "pattern": "\\w+",
                  "errorMessage": "ERR_VALID_TOTAL_TITLE_REQUIRED"
                }
              }
            }
          ],
          "required": ["summaryAnswers"]
        }
      }
    },
    {
      "if": {
        "properties": {
          "pageType": {
            "enum": ["QuestionPage"]
          }
        }
      },
      "then": {
        "properties": {
          "answers": {
            "type": "array",
            "contains": {
              "type": "object",
              "properties": {
                "type": {
                  "not": {
                    "enum": ["MutuallyExclusive"]
                  }
                }
              }
            },
            "errorMessage": {
              "contains": "ERR_NO_ANSWERS"
            }
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "pageType": {
            "enum": ["ListCollectorQualifierPage"]
          }
        }
      },
      "then": {
        "if": {
          "properties": {
            "additionalGuidanceEnabled": {
              "const": true
            }
          }
        },
        "then": {
          "properties": {
            "additionalGuidanceContent": {
              "type": "string",
              "pattern": "\\w+",
              "errorMessage": "ERR_ADDITONAL_GUIDANCE_CONTENT_REQUIRED"
            }
          }
        }
      }
    }
  ],
  "required": ["id", "title", "pageDescription"]
}
